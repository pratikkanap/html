<!DOCTYPE html>
<html>
<head>
  <title>Simple Item List</title>
</head>
<body>
  <h2>My Item List</h2>

  <!-- Input box and button -->
  <input type="text" id="itemInput" placeholder="Type something">
  <button onclick="addItem()">Add</button>

  <!-- List to show items -->
  <ul id="itemList"></ul>

  <script>
    // Store items here
    let items = [];

    // Add item to the list
    function addItem() {
      let input = document.getElementById("itemInput");
      let itemText = input.value;

     
      // Add to array
      items.push(itemText);

      // Clear input box
      input.value = "";

      // Show updated list
      showItems();
    }

    // Show all items
    function showItems() {
      let list = document.getElementById("itemList");
      list.innerHTML = ""; // Clear old list

      // Loop through items and show each one
      items.forEach((item, index) => {
        list.innerHTML += `<li>${item} <button onclick="deleteItem(${index})">Delete</button></li>`;
      });
    }

    // Delete item by index
    function deleteItem(index) {
      items.splice(index, 1); // Remove item
      showItems(); // Update list
    }
  </script>
</body>
</html>
